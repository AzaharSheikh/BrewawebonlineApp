<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/layoutbackground"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:weightSum="10"
        android:background="@drawable/upper_corner_round"
        android:orientation="vertical">


        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:src="@drawable/image2"
            android:adjustViewBounds="true"
            />

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@color/gray"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/title"
            android:text="SugarBox"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="10dp"
 />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Specialist in cakes, cupcakes and muffins for all occasions."
            android:textSize="18dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:id="@+id/txt_p_details"
            android:textAlignment="inherit"
            android:layout_gravity="left"

            android:gravity="left"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="A/1604 Vasundhara kanakia spaces, Glady alwares road opp, Lokpuram gate no 1, Thane West, Navi Mumbai â€“ 400610"
            android:textSize="18dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/p_address" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="Visit Page"
            android:id="@+id/btn_site_visit"
            android:background="@drawable/round_corner_button"
            android:textColor="@color/white"
            />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
