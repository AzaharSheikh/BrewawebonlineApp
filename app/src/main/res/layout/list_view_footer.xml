<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/li"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/rd_corner_bt"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscribe to our mailing list"
            android:textSize="20dp"
            android:textColor="@color/text_clr"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/layout_border"
            android:padding="12dp"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Subscribe"
            android:id="@+id/button"
            android:textColor="@color/white"
            android:background="@color/subscribe"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
        <ImageView
            android:layout_below="@+id/li"
            android:id="@+id/img_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:src="@drawable/img1"
            android:adjustViewBounds="true"

            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/li"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Powered by:"/>
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/img_logo"
            android:adjustViewBounds="true"
            android:src="@drawable/brewlogoforhome"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/copyright"/>
        <TextView
            android:id="@+id/txt_thought_interact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/thoughtinteract"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="all rights\n reserved 2016."/>

    </LinearLayout>


</RelativeLayout>