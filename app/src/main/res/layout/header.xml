<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
            android:id="@+id/img_dashboard"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:src="@drawable/img1"
            android:adjustViewBounds="true"

        />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/img_logo"
                    android:adjustViewBounds="true"
                    android:src="@drawable/brewlogoforhome"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                     />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                   android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="@string/home_headline"/>
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_req_listing"
                    android:text="Request for listing"
                    android:textSize="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:background="@drawable/round_corner_button"
                    android:layout_height="30dp" />

            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/img_logo"
                android:visibility="gone"
                android:src="@drawable/brewlogoforhome"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/layoutbackground"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_height="wrap_content">
                <EditText
                    android:gravity="center"
                    android:id="@+id/edt_search_locality"
                    android:layout_weight="6"
                    android:textSize="15dp"
                    android:layout_margin="10dp"
                    android:hint="Search your locality"
                    android:layout_width="0dp"
                    android:background="@drawable/layout_border"
                    android:layout_height="match_parent" />
                <Button
                    android:layout_marginBottom="10dp"
                    android:id="@+id/btn_go"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="GO"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:id="@+id/btn_voice_search"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/radiomicrophone"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>